            MouseEnter="SoinEntreeSouris"
            MouseLeave="SoinSortieSouris"
            MouseLeftButtonDown="Soin">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Soin.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            x:Name="rectBombe"
