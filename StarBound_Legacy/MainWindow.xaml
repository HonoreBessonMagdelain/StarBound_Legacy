<Window
    x:Class="StarBound_Legacy.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarBound_Legacy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="fenetreJeu"
    Title="MainWindow"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/Fond.png" />
    </Window.Background>
    <Canvas
        Name="Canva"
        Width="auto"
        Height="auto"
        Focusable="True"
        KeyDown="ToucheEnfoncee"
        KeyUp="ToucheRelachee">

        <Rectangle
            Canvas.Left="10"
            Canvas.Top="10"
            Width="30"
            Height="30"
            Panel.ZIndex="5"
            Fill="Red"
            Stroke="Black" />
        <Rectangle
            Canvas.Left="56"
            Canvas.Top="10"
            Width="30"
            Height="30"
            Panel.ZIndex="5"
            Fill="Red"
            Stroke="Black" />
        <Rectangle
            Canvas.Left="100"
            Canvas.Top="10"
            Width="30"
            Height="30"
            Panel.ZIndex="5"
            Fill="Red"
            Stroke="Black" />
        <TextBlock
            x:Name="txtScore"
            Canvas.Left="618"
            Canvas.Top="8"
            Width="auto"
            Height="auto"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="5"
            FontSize="24"
            Text="26300"
            TextWrapping="Wrap" FontFamily="ArcadeClassic" Foreground="White" />
        <Rectangle
            x:Name="rectJoueur"
            Canvas.Left="71"
            Canvas.Top="201"
            Width="136"
            Height="48"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="4"
            Fill="#FF2A6AD2" />
        <TextBlock
            x:Name="txtPalier"
            Canvas.Left="37"
            Canvas.Top="68"
            Width="65"
            Height="28"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="20"
            Text="0"
            TextWrapping="Wrap" />


    </Canvas>
</Window>
