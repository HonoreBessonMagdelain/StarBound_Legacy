                <ImageBrush ImageSource="/MiniGun.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="rectPlus" Grid.Column="2" HorizontalAlignment="Left" Height="50" Margin="22,0,0,0" VerticalAlignment="Center" Width="50" MouseEnter="PlusEntreeSouris" MouseLeave="PlusSortieSouris" MouseLeftButtonDown="Plus">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/PlusRelache.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="rectVaisseau" Grid.Column="1" Grid.ColumnSpan="12" HorizontalAlignment="Center" Height="150" Grid.RowSpan="2" Grid.Row="1" VerticalAlignment="Center" Width="426">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Vaisseau1canon1.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="rectPrix" Grid.Column="13" Grid.Row="4" Margin="0,30,50,50" MouseEnter="PrixEntreeSouris" MouseLeave="PrixSortieSouris" MouseLeftButtonDown="Acheter"/>
        <TextBlock x:Name="txtPrix" Grid.Column="13" Margin="10,60,60,60" Grid.Row="4" TextWrapping="Wrap" Text="600 pts" FontSize="60" FontFamily="ArcadeClassic" TextAlignment="Center" MouseEnter="TxtPrixEntreeSouris" MouseLeave="TxtPrixSortieSouris" MouseLeftButtonDown="Acheter" Foreground="{x:Null}"/>
        <TextBlock x:Name="txtNombrePossedes" Grid.Column="1" Grid.ColumnSpan="6" HorizontalAlignment="Left" Height="70" Margin="60,0,0,40" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="1000" FontSize="60" FontFamily="ArcadeClassic"/>

