            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="204*"/>
            <ColumnDefinition Width="204*"/>
            <ColumnDefinition Width="204*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="162*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="127*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="15" Content="Retour au menu" Margin="30,30,30,30" Grid.Row="4" Click="Retour"/>
        <Button Grid.Column="1" Content="+" HorizontalAlignment="Left" Width="50" Height="50" VerticalAlignment="Center" Click="Button_Click" FontSize="24" FontWeight="Bold" Margin="44,0,0,0"/>
        <Button Grid.Column="1" Content="200 pts" HorizontalAlignment="Left" Width="100" VerticalAlignment="Center" Height="50" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="3" Margin="94,0,0,0"/>
