<Window
    x:Class="StarBound_Legacy.Garage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarBound_Legacy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Garage"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas
        x:Name="canvGarage"
        Width="800"
        Height="450"
        Background="#FF1320DE">
        <Rectangle
            x:Name="rectFondPoint"
            Canvas.Left="20"
            Canvas.Top="10"
            Height="30"
            MinWidth="200"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFC12121"
            RadiusX="15"
            RadiusY="16"
            RenderTransformOrigin="0.5,0.5"
            Stroke="Black" />
        <Label
            x:Name="lbPoint"
            Canvas.Left="25"
            Canvas.Top="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Points :"
            FontSize="18"
            RenderTransformOrigin="0.5,0.5" />
        <TextBlock
            Canvas.Left="100"
            Canvas.Top="13"
            FontSize="18"
            Text="000000000"
            TextWrapping="Wrap" />
        <Rectangle
            Canvas.Left="45"
            Canvas.Top="156"
            Height="150"
            MinWidth="300"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FF01A512" />
        <Button
            x:Name="btAcheterVie"
            Width="30"
            Height="30"
            Margin="10,410,360,10"
            Click="AcheterVie"
            Content="+" />
        <Button
            x:Name="btRetour"
            Canvas.Left="680"
            Canvas.Top="410"
            Width="100"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="RetourMenu"
            Content="Retour au menu" />
        <Button
            Canvas.Left="570"
            Canvas.Top="410"
            Width="100"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="retour au combat" Click="Rejouer" />

    </Canvas>
</Window>
