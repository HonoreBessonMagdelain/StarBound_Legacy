<Window x:Class="StarBound_Legacy.Credits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarBound_Legacy"
        mc:Ignorable="d"
        Title="Crédits" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="/Fond.png"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FondSpecial.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="174*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="388*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="115*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="269*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="5" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/ExterieurCredits.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Grid.Row="2" TextWrapping="Wrap" TextAlignment="Center" FontSize="30" Grid.ColumnSpan="3" FontWeight="Bold" Grid.Column="1" FontFamily="ArcadeClassic"><Run Text="Cr"/><Run Language="fr-fr" Text="e"/><Run Text="dits"/></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Grid.RowSpan="2" FontFamily="ArcadeClassic">
            <TextBlock.Background>
                <ImageBrush ImageSource="/InterieurCredits.png"/>
            </TextBlock.Background><Run Text="Conception et d"/><Run Text="e"/><Run Text="veloppement du jeu :"/><LineBreak/><Run Text=" Ethann Cochenet "/><LineBreak/><Run Text="et "/><LineBreak/><Run Text="Honor"/><Run Language="fr-fr" Text="e"/><Run Text=" Besson-Magdelain "/><LineBreak/><Run/><LineBreak/><Run Text="Musique"/><Run Text="s"/><Run Text=" du jeu :"/><LineBreak/><Run/><LineBreak/><Run Text="Scarface (Push it to the Limit)"/><LineBreak/><Run Text="Paul Engemann"/><LineBreak/><Run/><LineBreak/><Run Text="Main Theme"/><LineBreak/><Run Text="Project Laser"/></TextBlock>
        <Rectangle x:Name="rectRetour" Grid.Column="5" Margin="20,20,20,0" Grid.RowSpan="2" Grid.Row="4" MouseEnter="RetourEntreeSouris" MouseLeave="RetourSortieSouris" MouseLeftButtonUp="Retour">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/RetourRelache.png"/>
            </Rectangle.Fill>
        </Rectangle>

    </Grid>
</Window>
