        <Rectangle Grid.Column="8" Stroke="Black" Fill="Red" Width="50" Height="50"/>
        <Rectangle Grid.Column="9" Stroke="Black" Fill="Red" Width="50" Height="50"/>
        <Rectangle Grid.Column="10" Stroke="Black" Fill="Red" Width="50" Height="50"/>
        <Rectangle Grid.Column="11" Stroke="Black" Fill="Red" Width="50" Height="50"/>
        <Rectangle Grid.Column="3" Stroke="Black" Fill="Red" Width="50" Height="50"/>
        <Rectangle Grid.Column="13" Grid.Row="1" Stroke="Black" Fill="#FF8C8C8C" Margin="30,30,30,30"/>
